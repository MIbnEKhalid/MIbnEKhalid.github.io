  document.addEventListener('DOMContentLoaded', function() {
    console.log('DOM fully loaded and parsed');
    const headerHeight = document.querySelector('header').offsetHeight;
    console.log('Header height:', headerHeight);

    document.querySelectorAll('aside a').forEach(anchor => {
      anchor.addEventListener('click', function(e) {
        e.preventDefault();
        const targetId = this.getAttribute('href').substring(1);
        console.log('Anchor clicked, target ID:', targetId);
        scrollToSection(targetId, headerHeight);
      });
    });


    // Check if there's a hash in the URL and scroll to the corresponding section
    const hash = window.location.hash.substring(1);
    if (hash) {
      console.log('Hash found in URL:', hash);
      scrollToSection(hash, headerHeight);
    }


  });

  function scrollToSection(targetId, headerHeight) {
    const targetElement = document.getElementById(targetId);

    if (targetElement) {
      const targetPosition = targetElement.offsetTop - headerHeight - 80; // Adjust 80px as needed
      console.log('Scrolling to position:', targetPosition);
      window.scrollTo({
        top: targetPosition,
        behavior: 'smooth'
      });
      // Update the URL with the target ID
      history.pushState(null, null, `#${targetId}`);
      highlightSection(targetId);
    } else {
      console.log('Target element not found for ID:', targetId);
    }
  }

  function highlightSection(targetId) {
    const targetElement = document.getElementById(targetId);
    if (targetElement) {
      targetElement.style.transition = "background-color 0.5s ease, box-shadow 0.5s ease";
      targetElement.style.backgroundColor = "#2c3e50"; // Highlight color
      targetElement.style.boxShadow = "0 0 10px rgba(0, 0, 0, 0.5)"; // Add shadow effect
      setTimeout(() => {
        targetElement.style.backgroundColor = ""; // Revert to original color
        targetElement.style.boxShadow = ""; // Remove shadow effect
      }, 2000);
    }
  }
