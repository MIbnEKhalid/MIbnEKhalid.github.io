<div class="container mt-5">
    <h1>Available Sitemaps</h1>
    <div class="list-group mt-4">
        {{#each sitemaps}}
        <a href="{{this.url}}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            {{this.name}}
            <span class="badge bg-primary rounded-pill">View</span>
        </a>
        {{/each}}
    </div>
</div>

<style>
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    h1 {
        color: #333;
        margin-bottom: 30px;
        text-align: center;
    }

    .list-group-item {
        transition: all 0.3s ease;
    }

    .list-group-item:hover {
        background-color: #f8f9fa;
        transform: translateX(5px);
    }

    .badge {
        font-size: 0.8rem;
    }
</style>
